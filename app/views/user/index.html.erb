<h1>List of users</h1>

<hr>

<div class="mx-auto p-2" style="width: 95rem;">
  <div class="card" style="width: 50rem;">
    <table border="1">
      <tr>
        <th>
        <h5 class="card-subtitle mt-2 mb-2 text-body-secondary">Username</h5> 
        </th>

        <th>
        <h5 class="card-subtitle mt-2 mb-2 text-body-secondary">Private?</h5>
        </th>

        <th>

        </th>

        <th>

        </th>

      </tr>

      <% @list_of_users.each do |a_user| %>
        <tr>
          <td>
           <%= a_user.username %>
          </td>
          <td>
            <%= a_user.private ? "Yes" : "No" %>
          </td>
          <td>
            <%= render "user/follow_request", user: a_user %>
          </td>
          <td>
            <a href="/users/<%= a_user.username %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
