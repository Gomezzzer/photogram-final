<div class="container">

<h3 class="mx-auto mt-3">List of users</h3>


<hr>

<div class="mx-auto p-2 shadow p-3 mb-5">
  <div> 
    <table class="table table-striped table-hover" border="1">
      <tr>
        <th>
        <h5 class="card-subtitle mt-2 mb-2 text-body-secondary">Username</h5> 
        </th>

        <th>
        <h5 class="card-subtitle mt-2 mb-2 text-body-secondary">Private?</h5>
        </th>

        <th>

        </th>

        <th>

        </th>

      </tr>

      <% @list_of_users.each do |a_user| %>
        <tr>
          <td>
           <%= a_user.username.capitalize %>
          </td>
          <td>
            <%= a_user.private ? "Yes" : "No" %>
          </td>
          <td>
            <%= render "user/follow_request", user: a_user %>
          </td>
          <td>
            <a href="/users/<%= a_user.username %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

</div>
